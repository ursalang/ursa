use js.Math
use js.JSON
use js.process
use js.RegExp
use js.document
use js.console
use js.setTimeout
use js.Infinity

Struct {
  // Basic facilities
  print = console.log

  // Various JavaScript facilities
  JSON = JSON
  RegExp = RegExp
  process = process
  document = document
  setTimeout = setTimeout

  // Maths
  pi = Math.PI
  infinity = Infinity
  sqrt = Math.sqrt
  exp = Math.exp
  log = Math.log
  sin = Math.sin
  cos = Math.cos
  tan = Math.tan

  // Range iterator
  range = gen(n: Num): Any { // FIXME: return type should be Num
    var i = 0
    loop {
      if i == n { return null }
      yield i
      i := i + 1
    }
  }
}
